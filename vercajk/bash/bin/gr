#!/bin/bash

source $HOME/.local/share/vercajk/bash_functions/bash_private_functions.sh


set -e

remote=$(get_remote $1)
if [[ "$remote" = -* ]]; then
    git rebase "$@"
    exit 0
fi


gf "$1"
remote=$(get_remote $1)
git rebase $remote/$(git branch --show-current)

if [ -n "$(git submodule status)" ]; then
    git submodule update --recursive
fi
